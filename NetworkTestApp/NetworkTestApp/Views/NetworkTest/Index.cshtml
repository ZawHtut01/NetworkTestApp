@model NetworkTestApp.Models.NetworkTestRequest
@{
    ViewData["Title"] = "Network Tester";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
   <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="fa-solid fa-network-wired me-2"></i>Network Tester
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="#"><i class="fa-solid fa-house me-1"></i> Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fa-solid fa-clock-rotate-left me-1"></i> History</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fa-solid fa-gear me-1"></i> Settings</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col-12">
                <div class="card bg-white border-0">
                    <div class="card-body p-4">
                        <h1 class="display-5 fw-bold">Network Connection Tester</h1>
                        <p class="lead text-muted">Test your network connectivity with various diagnostic tools</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0"><i class="fa-solid fa-sliders me-2"></i>Test Configuration</h5>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="TestConnection" method="post" id="testForm">
                            <div class="mb-3">
                                <label asp-for="Host" class="form-label fw-semibold">Hostname or URL</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa-solid fa-globe"></i></span>
                                    <input asp-for="Host" class="form-control" placeholder="e.g., google.com or https://google.com" />
                                </div>
                                <span asp-validation-for="Host" class="text-danger small"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="TestType" class="form-label fw-semibold">Test Type</label>
                                <select asp-for="TestType" class="form-select" asp-items="Html.GetEnumSelectList<TestType>()" id="testTypeSelect">
                                    <option value="">Select test type</option>
                                </select>
                            </div>
                            
                            <div class="mb-3" id="portGroup" style="display: none;">
                                <label asp-for="Port" class="form-label fw-semibold">Port Number</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa-solid fa-plug"></i></span>
                                    <input asp-for="Port" class="form-control" placeholder="e.g., 80 for HTTP" />
                                </div>
                            </div>
                            
                            <div class="mb-4">
                                <label asp-for="Timeout" class="form-label fw-semibold">Timeout (milliseconds)</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa-solid fa-hourglass-half"></i></span>
                                    <input asp-for="Timeout" class="form-control" value="1000" />
                                </div>
                            </div>
                            
                            <button type="submit" class="btn btn-primary w-100 py-3 fw-semibold">
                                <i class="fa-solid fa-play-circle me-2"></i>Run Test
                            </button>
                        </form>
                    </div>
                </div>
                
                <div class="card">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fa-solid fa-clock-rotate-left me-2"></i>Recent Tests</h5>
                        <button class="btn btn-sm btn-outline-danger" id="clearHistoryBtn">
                            <i class="fa-solid fa-trash me-1"></i>Clear
                        </button>
                    </div>
                    <div class="card-body p-4">
                        <div id="recentTestsContainer">
                            <!-- Recent tests will be loaded here -->
                            <div class="empty-history">
                                <i class="fa-solid fa-inbox fa-2x mb-3"></i>
                                <p>No recent tests found</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6">
                <div class="card h-100">
                    <div class="card-header py-3">
                        <h5 class="mb-0"><i class="fa-solid fa-chart-simple me-2"></i>Test Results</h5>
                    </div>
                    <div class="card-body p-4 position-relative">
                        <div class="loading-overlay" id="loadingOverlay">
                            <div class="text-center">
                                <div class="ping-animation mb-3"></div>
                                <p class="fw-semibold">Testing connection...</p>
                            </div>
                        </div>
                        
                        <div id="initialState" class="text-center py-5 @(ViewBag.Result != null ? "d-none" : "")">
                            <i class="fa-solid fa-network-wired text-muted" style="font-size: 4rem;"></i>
                            <h4 class="mt-3 text-muted">Run a test to see results</h4>
                            <p class="text-muted">Configure your test parameters and click "Run Test"</p>
                        </div>
                        
                        @if (ViewBag.Result != null)
                        {
                            var result = ViewBag.Result as NetworkTestApp.Models.NetworkTestResult;
                            <div class="test-result show" id="testResult">
                                <div class="text-center mb-4">
                                    <div class="result-icon @(result.Success ? "text-success" : "text-danger")">
                                        <i class="fa-solid @(result.Success ? "fa-check-circle" : "fa-xmark-circle")"></i>
                                    </div>
                                    <h3 class="@(result.Success ? "text-success" : "text-danger")">
                                        @(result.Success ? "Connection Successful" : "Connection Failed")
                                    </h3>
                                    <p class="text-muted">Test performed at @result.TestTime.ToString("yyyy-MM-dd HH:mm:ss")</p>
                                </div>
                                
                                <div class="row text-center mb-4">
                                    <div class="col-4">
                                        <div class="stat-card">
                                            <div class="stat-label">Response Time</div>
                                            <div class="stat-value @(result.ResponseTime < 100 ? "text-success" : result.ResponseTime < 500 ? "text-warning" : "text-danger")">
                                                @result.ResponseTime ms
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="stat-card">
                                            <div class="stat-label">Test Type</div>
                                            <div class="stat-value text-primary">@result.TestType</div>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="stat-card">
                                            <div class="stat-label">Status</div>
                                            <div class="stat-value @(result.Success ? "text-success" : "text-danger")">
                                                @(result.Success ? "OK" : "Failed")
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="bg-light p-3 rounded-3">
                                    <h6 class="fw-semibold mb-3">Test Details</h6>
                                    <table class="table table-borderless table-sm">
                                        <tr>
                                            <td width="30%"><strong>Target:</strong></td>
                                            <td>@result.Host</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Message:</strong></td>
                                            <td>@result.Message</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Test Type:</strong></td>
                                            <td>@result.TestType</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Test Time:</strong></td>
                                            <td>@result.TestTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        </tr>
                                    </table>
                                </div>
                                
                                <div class="mt-4 text-center">
                                    <button class="btn btn-outline-primary me-2" id="runAgainBtn">
                                        <i class="fa-solid fa-rotate-right me-2"></i>Run Again
                                    </button>
                                    <button class="btn btn-outline-secondary" id="saveResultBtn">
                                        <i class="fa-solid fa-download me-2"></i>Save Result
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap & jQuery JS -->
    <script src="~/js/index.js" ></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
</body>
</html>